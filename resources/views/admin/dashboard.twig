{% extends 'templates/baseAdmin.twig' %}

{% block title %}
Dashboard | Leelas Motel
{% endblock %}

{% block content %}
    {% include 'templates/partials/admin/navigation.twig' %}
    <div class="main-panel">
        <nav class="navbar navbar-default navbar-fixed">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">Dashboard</a>
                </div>
                <div class="collapse navbar-collapse">


                    <ul class="nav navbar-nav navbar-right">
                        <li onclick="logout();">
                            <a id="logout" href="#">
                                Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>


        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="header">
                                <h4 id="status-heading" class="title">Recent Orders</h4>

                            </div>



                            <div class="content table-responsive table-full-width" style="min-height:34vh">
                                <table class="table table-hover table-striped">
                                    <thead>
                                    <th scope="col">Id</th>
                                    <th scope="col">Customer</th>
                                    <th scope="col">Unpaid</th>
                                    <th scope="col">Date</th>
                                    <th scope="col">Detail</th>
                                    </thead>
                                    <tbody id="tBody-order">
                                    <tr>
                                        <td>...</td>
                                        <td>...</td>
                                        <td>...</td>
                                        <td>...</td>
                                        <td>...</td>

                                    </tr>
                                    </tbody>
                                </table>
                            </div>

                            <div style="display: flex;justify-content:center;">

                                <button style="display: inline-block;width:100px;font-size:12px;margin: 0px 10px 10px 10px" class="form-control btn-info btn-fill hidden"
                                        id="action-btn-order">View More
                                    <style type="text/css">
                                        #action-btn:focus {
                                            background-color: #1baf6a;
                                        }
                                    </style>
                                </button>

                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card">
                            <div class="header">
                                <h4 id="status-heading" class="title">Recent Customers</h4>
                            </div>



                            <div class="content table-responsive table-full-width" style="min-height:34vh">
                                <table class="table table-hover table-striped">
                                    <thead>
                                    <th scope="col">Customer Id</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Mobile</th>
                                    <th scope="col">Detail</th>
                                    </thead>
                                    <tbody id="tBody-customer" style="font-size:12px;">
                                    <tr>
                                        <td>...</td>
                                        <td>...</td>
                                        <td>...</td>
                                        <td>...</td>

                                    </tr>
                                    </tbody>
                                </table>
                            </div>

                            <div style="display: flex;justify-content:center;">

                                <button style="display: inline-block;width:100px;font-size:12px;margin: 0px 10px 10px 10px" class="form-control btn-info btn-fill hidden"
                                        id="action-btn-customer">View More
                                    <style type="text/css">
                                        #action-btn:focus {
                                            background-color: #1baf6a;
                                        }
                                    </style>
                                </button>

                            </div>

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">
                        <div class="card">
                            <div class="header">
                                <h4 id="status-heading" class="title">Today's Birthday</h4>
                            </div>
                            <div id="alert-text" class="hidden" style="text-align:center;font-weight:bold;">No Birthday Found</div>



                            <div id='birthday-content' class="content table-responsive table-full-width" style="min-height:34vh">
                                <table class="table table-hover table-striped">
                                    <thead>
                                    <th scope="col">Customer Id</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Age</th>
                                    <th scope="col">Mobile</th>
                                    <th scope="col">Detail</th>
                                    </thead>
                                    <tbody id="tBody-birthday" style="font-size:12px;">
                                    <tr>
                                        <td>...</td>
                                        <td>...</td>
                                        <td>...</td>
                                        <td>...</td>
                                        <td>...</td>

                                    </tr>
                                    </tbody>
                                </table>
                            </div>

                            <div style="display: flex;justify-content:center;">

                                <button style="display: inline-block;width:120px;font-size:12px;margin: 0px 10px 10px 10px" class="form-control btn-info btn-fill hidden"
                                        id="action-btn-birthday">Send Message
                                    <style type="text/css">
                                        #action-btn:focus {
                                            background-color: #1baf6a;
                                        }
                                    </style>
                                </button>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>




    </div>
{% endblock %}

{% block pageJs %}
<script type="text/javascript" src="{{ base_url() }}/admin/js/index.js"></script>
{% endblock %}