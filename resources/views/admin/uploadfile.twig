{% extends 'templates/baseAdmin.twig' %}

{% block title %}
    Dashboard | Leelas Motel
{% endblock %}

{% block pageCss %}
    <link rel="stylesheet" href="{{ base_url() }}/admin/css/webEdit.css">
{% endblock %}

{% block content %}
    {% include 'templates/partials/admin/navigation.twig' %}
    <div class="main-panel">
        <nav class="navbar navbar-default navbar-fixed">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">Website Management</a>
                </div>
                <div class="collapse navbar-collapse">


                    <ul class="nav navbar-nav navbar-right">
                        <li onclick="logout();">
                            <a id="logout" href="#">
                                Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>


        <div class="content">
            <div class="container-fluid">
                <div class="row">

                    <!-- OrderForm-->
                    <div class="col-md-10 col-md-offset-1">
                        <div class="card">
                            <div class="header">
                                <h4 class="title">Upload Images</h4>
                            </div>
                            <span id="customerSpan" style="margin:15px;color:red;font-size:12px;" class="hidden">Fields Marked * are required!</span>
                            <div class="content">
                                <form id="form-box" action="{{ path_for('admin.webedit') }}" method="post" enctype="multipart/form-data">
                                    <div class="row">

                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <p>
                                                    <label>Add files (up to 3): </label><br/>
                                                    <input type="file" name="example2[]" multiple="multiple"/><br/>
                                                    <input type="text" id="category" name="category" value="mainBanner" style="display:none;">
                                                </p>
                                                <input type="submit" id="upload-btn" class="filebtn"  name="submit" value="Upload File Now" >
                                            </div>
                                        </div>
                                    </div>
                                    <div class="clearfix"></div>
                                </form>
                            </div>
                        </div>

                        <div class="card">
                            <div class="header">
                                <h4 class="title">Set Price</h4>
                            </div>
                            <span id="customerSpan" style="margin:15px;color:red;font-size:12px;" class="hidden">Fields Marked * are required!</span>
                            <div class="content">
                                <form class="form-inline" id="form-box" action="{{ path_for('admin.webedit') }}" method="post" enctype="multipart/form-data">
                                    <div class="row">
                                            <p style="padding: 0 15px;">Set category and enter the price : </p>
                                        <div class="col-md-4">
                                            <div style="display: flex; margin: 15px;">
                                                <select id="status-selector" class="form-control" id="recordsPerPage" style="width:150px;">
                                                    <option selected>Category</option>
                                                    <option>Standard Rooms</option>
                                                    <option>Delux Rooms</option>
                                                    <option>Royal Rooms</option>
                                                </select>
                                                <input style="margin-left: 20px;" type="text" class="form-control"placeholder="Price">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="clearfix"></div>
                                </form>
                                <button id="price-btn" class="filebtn" type="button" >Set Price</button>
                            </div>
                        </div>
                    </div>


                </div>


            </div>

        </div>




    </div>

    {% include 'templates/partials/admin/footer.twig' %}
{% endblock %}

{% block pageJs %}
    <script type="text/javascript" src="{{ base_url() }}/admin/js/webedit.js"></script>

{% endblock %}

