{% extends 'templates/baseAdmin.twig' %}

{% block title %}
   Customers | Leelas Motel
{% endblock %}

{% block pageCss %}
{% endblock %}

{% block content %}
    {% include 'templates/partials/admin/navigation.twig' with {'customers': 'active'} %}
    <div class="main-panel">
        <nav class="navbar navbar-default navbar-fixed">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">Customer Detail</a>
                </div>
                <div class="collapse navbar-collapse">


                    <ul class="nav navbar-nav navbar-right">
                        <li onclick="logout();">
                            <a id="logout" href="#">
                                Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>



        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="header">
                                <h4 id="status-heading" class="title"> All Bookings</h4>
                                <p class="category">Below bookings are in order of new to old.</p>
                            </div>

                            <!-- Booking Table-->
                            <div class="content table-responsive table-full-width" style="min-height:34vh">
                                <table class="table table-hover table-striped">
                                    <thead>
                                    <th scope="col">Booking Id</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Mobile</th>

                                    <th scope="col">Check In</th>
                                    <th scope="col">Check Out</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Room</th>
                                    <th scope="col">Detail</th>
                                    </thead>
                                    <tbody id="tBody">
                                    {% for key,value in bookings %}
                                        <tr>
                                            <td>{{ value.bookingId }}</td>
                                            <td>{{ value.name }}</td>
                                            <td>{{ value.mobile }}</td>
                                            <td>{{ value.checkIn }}</td>
                                            <td>{{ value.checkOut }}</td>
                                            <td>{{ value.price }}</td>
                                            <td>{{ value.roomAllotted }}</td>
                                            <td><a href="{{ base_url() }}/admin/bookings/detail/{{ value.bookingId }}">More..</a></td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>



    </div>

    {% include 'templates/partials/admin/footer.twig' %}
{% endblock %}

{% block pageJs %}
    <script type="text/javascript" src="{{ base_url() }}/admin/js/bookingDetail.js"></script>

{% endblock %}

