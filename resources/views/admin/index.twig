<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8" />


    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    <title>Admin Panel - Leelas Motel</title>

    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />


    <link type="text/css" href="{{ base_url() }}/admin/css/bootstrap.css" rel="stylesheet" />
    <link type="text/css" href="{{ base_url() }}/admin/css/index.css" rel="stylesheet" />
    

    <!-- Bootstrap core CSS     -->


</head>

<body>

    <div class="container-fluid minH">
        <div class="row align-items-center justify-content-center minH">
            <div class="col-md-12">
                <div id="main-container" class="main">

                    <form>

                        <div class="row">
                            <div class="col-md-12" style="margin-top:10px;">
                                <div class="lines">
                                    <h2 style="display:block;margin-top:25px;">Leelas Motel</h2>
                                    <p>Web Admin Panel</p>
                                </div>
                            </div>
                        </div>
                        <div class="container">
                            <input type="text" id="auth-email" placeholder="Email" name="email">
                            <input type="password" id="auth-password" placeholder="Password" name="password">
                            <label id="errorIndicator" style="display: none; text-align: center; margin: 10px auto">Wrong Email id or password</label>

                            <button type="submit" onclick="event.preventDefault()" id="auth-btn" >Sign In</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


</body>

<!--   Core JS Files   -->

