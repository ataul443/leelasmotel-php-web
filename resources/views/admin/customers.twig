{% extends 'templates/baseAdmin.twig' %}

{% block title %}
    Customers | Leelas Motel
{% endblock %}

{% block content %}
    {% include 'templates/partials/admin/sidebar.twig' with {'customers': 'active'} %}
    <div class="main-panel">
        {% include 'templates/partials/admin/navigation.twig' with {'foo':'customers'}%}



        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="header">
                                <h4 id="status-heading" class="title"> All Customers</h4>
                                <p class="category">Below Customers are in order of new to old.</p>
                            </div>

                            <div style="display: flex; justify-content: space-between; flex-wrap: wrap">


                                <div style="display: flex;margin: 15px;">
                                    <input class="form-control" id="search" style="max-width: 200px;text-transform:uppercase; min-width: 160px; order: -1" placeholder="Search...">
                                    <button id="search-btn" type="button" style="height:40px;" class="btn btn-success btn-fill ">
                                        <i class="fa fa-search" style="font-size: 18px"></i>
                                    </button>
                                </div>




                            </div>

                            <div class="content table-responsive table-full-width" style="min-height:34vh">
                                <table class="table table-hover table-striped">
                                    <thead>

                                    <th scope="col">Customer Id</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Mobile</th>

                                    <th scope="col">Address</th>
                                    <th scope="col">Detail</th>
                                    </thead>
                                    <tbody id="tBody">
                                    <tr>

                                        <td>...</td>
                                        <td>...</td>
                                        <td>...</td>
                                        <td>...</td>
                                        <td>...</td>

                                    </tr>
                                    </tbody>
                                </table>
                            </div>

                            <div id="page-prop">
                                <div style="display: flex; justify-content: space-between; flex-wrap: wrap; margin: auto 15px;">
                                    <nav><ul class="pagination">
                                            <li>1</li>
                                        </ul></nav>




                                    <p id="rowIndicator" class="hidden-xs" style="margin: 10px 0px;"></p>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>



    </div>

    {% include 'templates/partials/admin/footer.twig' %}
{% endblock %}

{% block pageJs %}
    <script type="text/javascript" src="{{ base_url() }}/admin/js/jquery.simplePagination.js"></script>
    <script type="text/javascript" src="{{ base_url() }}/admin/js/customers.js"></script>

{% endblock %}

