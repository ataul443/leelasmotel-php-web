{% extends 'templates/baseAdmin.twig' %}

{% block title %}
    New Booking| Leelas Motel
{% endblock %}

{% block pageCss %}
    <link rel="stylesheet" href="{{ base_url() }}/admin/css/webEdit.css">
    <link rel="stylesheet" href="{{ base_url() }}/admin/css/bookingForm.css">
{% endblock %}

{% block content %}
    {% include 'templates/partials/admin/sidebar.twig' with {'newbooking': 'active'} %}
    <div class="main-panel" style="height: auto; max-height: fit-content">
        {% include 'templates/partials/admin/navigation.twig' with {'foo':'new', 'bar': 'booking'}%}


        <div class="content">
            <div class="container-fluid">
                <div class="row">

                    <!-- OrderForm-->
                    <div class="col-md-10 col-md-offset-1">
                        <div class="card">
                            <div class="header">
                                <h4 class="title">Enter Your Details</h4>
                            </div>
                            <span id="customerSpan" style="margin:15px;color:red;font-size:12px;" class="hidden">Fields Marked * are required!</span>
                            <div class="content">
                                <form id="form-box" action="{{ path_for('admin.webedit') }}" method="post" enctype="multipart/form-data">
                                    <div class="form-group">
                                        <div class="row">
                                            <label for="custBookingFormName" class="col-sm-2 col-form-label">Name</label>
                                            <div class="col-sm-8">
                                                <input type="text" class="form-control" id="custBookingFormName" placeholder="Your Name">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <label for="custBookingFormContact" class="col-sm-2 col-form-label">Contact No.</label>
                                            <div class="col-sm-8">
                                                <input type="text" class="form-control" id="custBookingFormContact" placeholder="Your Contact number">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <label for="custBookingFormAddress" class="col-sm-2 col-form-label">Address</label>
                                            <div class="col-sm-8">
                                                <input type="text" class="form-control" id="custBookingFormAddress" placeholder="Your Address">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="clearfix"></div>
                                </form>
                            </div>
                        </div>

                        <div class="card">
                            <div class="header">
                                <h4 class="title">Enter Booking Details</h4>
                            </div>
                            <span id="customerSpan" style="margin:15px;color:red;font-size:12px;" class="hidden">Fields Marked * are required!</span>
                            <div class="content">
                                <form class="form-inline" id="form-box" action="{{ path_for('admin.webedit') }}" method="post" enctype="multipart/form-data">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-sm-2">
                                                <label>Number Of Rooms </label>
                                            </div>
                                            <div class="col-sm-3">
                                                <input type="number" min="0" value="0" class="form-control" id="custStandardRooms" placeholder="Standard Rooms">
                                            </div>
                                            <div class="col-sm-3">
                                                <input type="number" min="0" value="0" class="form-control" id="custDeluxRooms" placeholder="Delux rooms">
                                            </div>
                                            <div class="col-sm-3">
                                                <input type="number" min="0" value="0" class="form-control" id="custRoyalRooms" placeholder="Royal Rooms">
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-2">
                                                <label>Guest</label>
                                            </div>
                                            <div class="col-sm-3">
                                                <input type="number" min="1" value="1" class="form-control" id="custAdult" placeholder="Adults">
                                            </div>
                                            <div class="col-sm-3">
                                                <input type="number" min="0" value="0"class="form-control" id="custChild" placeholder="Children">
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-2">
                                                <label>Check In</label>
                                            </div>
                                            <div class="col-sm-3">
                                                <input type="date" class="form-control" id="custCheckIn" placeholder="Check In">
                                            </div>
                                            <div class="col-sm-3">
                                                <label>Check Out</label>
                                            </div>
                                            <div class="col-sm-3">
                                                <input type="date" class="form-control" id="custCheckOut" placeholder="Check Out">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="clearfix"></div>
                                </form>
                            </div>
                        </div>

                        <button id="book-btn" class="filebtn" type="button" >Book Rooms</button>
                    </div>


                </div>


            </div>

        </div>




    </div>

    {% include 'templates/partials/admin/footer.twig' %}
{% endblock %}

{% block pageJs %}
    <script type="text/javascript" src="{{ base_url() }}/admin/js/newBooking.js"></script>

{% endblock %}

