{% extends 'templates/baseAdmin.twig' %}

{% block title %}
    New Booking| Leelas Motel
{% endblock %}

{% block pageCss %}


    <link rel="stylesheet" href="{{ base_url() }}/admin/css/bookingForm.css">
{% endblock %}

{% block content %}
    {% include 'templates/partials/admin/navigation.twig' with {'newbooking': 'active'} %}
    <div class="main-panel" style="height: auto; max-height: fit-content">
        <nav class="navbar navbar-default navbar-fixed">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">New Booking</a>
                </div>
                <div class="collapse navbar-collapse">


                    <ul class="nav navbar-nav navbar-right">
                        <li onclick="logout();">
                            <a id="logout" href="#">
                                Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>


        <div class="content">
            <div class="container-fluid">
                <div class="row">

                    <!-- OrderForm-->
                    <div class="col-md-10 col-md-offset-1">
                        <div class="card">
                            <div class="header">
                                <h4 class="title">Enter Your Details</h4>
                            </div>
                            <span id="customerSpan" style="margin:15px;color:red;font-size:12px;" class="hidden">Fields Marked * are required!</span>
                            <div class="content">
                                <form id="form-box" action="{{ path_for('admin.webedit') }}" method="post" enctype="multipart/form-data">
                                    <div class="form-group">
                                        <div class="row">
                                            <label for="custBookingFormName" class="col-sm-2 col-form-label">Name</label>
                                            <div class="col-sm-8">
                                                <input type="text" class="form-control" id="custBookingFormName" placeholder="Your Name">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <label for="custBookingFormContact" class="col-sm-2 col-form-label">Contact No.</label>
                                            <div class="col-sm-8">
                                                <input type="text" class="form-control" id="custBookingFormContact" placeholder="Your Contact number">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <label for="custBookingFormAddress" class="col-sm-2 col-form-label">Address</label>
                                            <div class="col-sm-8">
                                                <input type="text" class="form-control" id="custBookingFormAddress" placeholder="Your Address">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="clearfix"></div>
                                </form>
                            </div>
                        </div>

                        <div class="card">
                            <div class="header">
                                <h4 class="title">Enter Booking Details</h4>
                            </div>
                            <span id="customerSpan" style="margin:15px;color:red;font-size:12px;" class="hidden">Fields Marked * are required!</span>
                            <div class="content">
                                <form class="form-inline" id="form-box" action="{{ path_for('admin.webedit') }}" method="post" enctype="multipart/form-data">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-sm-2">
                                                <label>Number Of Rooms </label>
                                            </div>
                                            <div class="col-sm-3">
                                                <input type="text" class="form-control" id="" placeholder="Standard Rooms">
                                            </div>
                                            <div class="col-sm-3">
                                                <input type="text" class="form-control" id="" placeholder="Delux rooms">
                                            </div>
                                            <div class="col-sm-3">
                                                <input type="text" class="form-control" id="" placeholder="Royal Rooms">
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-2">
                                                <label>Guest</label>
                                            </div>
                                            <div class="col-sm-3">
                                                <input type="text" class="form-control" id="" placeholder="Adults">
                                            </div>
                                            <div class="col-sm-3">
                                                <input type="text" class="form-control" id="" placeholder="Children">
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-2">
                                                <label>Check In</label>
                                            </div>
                                            <div class="col-sm-3">
                                                <input type="text" class="form-control" id="" placeholder="Check In">
                                            </div>
                                            <div class="col-sm-3">
                                                <label>Check Out</label>
                                            </div>
                                            <div class="col-sm-3">
                                                <input type="text" class="form-control" id="" placeholder="Check Out">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="clearfix"></div>
                                </form>
                            </div>
                        </div>

                        <button id="price-btn" class="filebtn" type="button" >Book Rooms</button>
                    </div>


                </div>


            </div>

        </div>




    </div>

    {% include 'templates/partials/admin/footer.twig' %}
{% endblock %}

{% block pageJs %}
    <script type="text/javascript" src="{{ base_url() }}/admin/js/newBooking.js"></script>

{% endblock %}

